<Page x:Class="CoffeeBar.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="Вход в CoffeeBar"
      Background="#FFF9F5F0">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#FF6D4C41">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="☕"
                         FontSize="80"
                         Foreground="White"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,20"/>
                <TextBlock Text="CoffeeBar" 
                         Foreground="White"
                         FontSize="42"
                         FontWeight="Bold"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,15"
                         FontFamily="Segoe UI"/>
                <TextBlock Text="Наслаждайтесь идеальной чашкой кофе" 
                         Foreground="#FFFFE0B2"
                         FontSize="20"
                         HorizontalAlignment="Center"
                         TextAlignment="Center"
                         Width="350"
                         TextWrapping="Wrap"
                         LineHeight="28"
                         FontFamily="Segoe UI Light"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="#FFF9F5F0" Padding="30">
            <StackPanel VerticalAlignment="Center" Width="350">

                <TextBlock Text="Вход в аккаунт" 
                         FontSize="28"
                         FontWeight="Bold"
                         Foreground="#FF6D4C41"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,40"
                         FontFamily="Segoe UI"/>

                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Логин" 
                             Foreground="#FF5D4037"
                             FontSize="16"
                             FontWeight="SemiBold"
                             Margin="0,0,0,5"
                             FontFamily="Segoe UI"/>
                    <TextBox x:Name="TextBoxLogin" 
                           FontSize="16"
                           Foreground="#FF4E2E25"
                           Background="#FFFFFFFF"
                           BorderBrush="#FFA1887F"
                           BorderThickness="2"
                           Padding="12,8"
                           Height="40"
                           FontFamily="Segoe UI"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="Пароль" 
                             Foreground="#FF5D4037"
                             FontSize="16"
                             FontWeight="SemiBold"
                             Margin="0,0,0,5"
                             FontFamily="Segoe UI"/>
                    <PasswordBox x:Name="PasswordBox" 
                               FontSize="16"
                               Foreground="#FF4E2E25"
                               Background="#FFFFFFFF"
                               BorderBrush="#FFA1887F"
                               BorderThickness="2"
                               Padding="12,8"
                               Height="40"
                               FontFamily="Segoe UI"/>
                </StackPanel>

                <Border x:Name="ErrorBorder" Background="#FFFFE0B2" Visibility="Collapsed" Padding="10" Margin="0,0,0,20">
                    <TextBlock x:Name="ErrorTextBlock" Foreground="#FF5D4037" FontSize="14" FontWeight="Bold"/>
                </Border>

                <Button x:Name="LoginButton" 
                      Content="Войти" 
                      Click="LoginButton_Click"
                      HorizontalAlignment="Stretch"
                      Background="#FF6D4C41"
                      Foreground="White"
                      BorderBrush="#FF4E2E25"
                      Height="45"
                      FontSize="18"
                      FontWeight="Bold"
                      Margin="0,0,0,25"
                      FontFamily="Segoe UI">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF4E2E25"/>
                                    <Setter Property="Foreground" Value="#FFFFFFFF"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF3E241E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Border Height="1" Background="#FFD7CCC8" Margin="0,0,0,25"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Нет аккаунта? " 
                             Foreground="#FF5D4037"
                             FontSize="16"
                             VerticalAlignment="Center"
                             FontFamily="Segoe UI"/>
                    <TextBlock Foreground="#FFFF9800" 
                             FontWeight="Bold"
                             FontSize="16"
                             Cursor="Hand"
                             MouseDown="RegisterHyperlink_MouseDown"
                             FontFamily="Segoe UI">
                        <Underline>Создать</Underline>
                    </TextBlock>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Page>

