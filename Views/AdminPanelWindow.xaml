<Window x:Class="CoffeeBar.Views.AdminPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Админ-панель — Управление товарами" 
        Height="650" 
        Width="1000"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="12" Background="#FFF9F5F0" BorderBrush="#FFE0E0E0" BorderThickness="1" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="3" Color="#888888" Opacity="0.3"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок с кнопкой закрытия -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,20">
                <TextBlock Text="☕ Админ-панель — Управление товарами" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#FF5D4037"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                <Button Content="✕" 
                        Click="Close_Click"
                        Width="36" 
                        Height="36"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        Foreground="#FF5D4037"
                        FontSize="16"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="Закрыть"/>

            </StackPanel>

            <DataGrid x:Name="ProductsDataGrid" 
                      Grid.Row="1" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionChanged="ProductsDataGrid_SelectionChanged"
                      MouseDoubleClick="ProductsDataGrid_MouseDoubleClick"
                      Margin="0,0,0,20"
                      Background="White"
                      BorderBrush="#FFD7CCC8"
                      BorderThickness="1"
                      RowHeaderWidth="0"
                      CanUserResizeColumns="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal">

                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Padding" Value="8"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FFF5F5F5"/>
                        <Setter Property="Foreground" Value="#FF5D4037"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="BorderBrush" Value="#FFD7CCC8"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding [ProductID]}" Width="60" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Название" Binding="{Binding [ProductName]}" Width="220"/>
                    <DataGridTextColumn Header="Описание" Binding="{Binding [Description]}" Width="300"/>
                    <DataGridTextColumn Header="Цена" Binding="{Binding [Price], StringFormat='₽ {0:F2}'}" Width="100"/>
                    <DataGridTextColumn Header="Категория" Binding="{Binding [CategoryName]}" Width="150"/>
                    <DataGridCheckBoxColumn Header="Доступен" Binding="{Binding [IsAvailable]}" Width="90"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Кнопки управления -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="➕ Добавить товар" 
                        Click="AddProduct_Click"
                        Background="#FF4CAF50"
                        Foreground="White"
                        Width="180"
                        Height="40"/>

                <Button x:Name="EditButton"
                        Content="✏️ Редактировать"
                        Click="EditProduct_Click"
                        Background="#FFFFC107"
                        Foreground="Black"
                        Width="180"
                        Height="40"
                        IsEnabled="False"/>

                <Button x:Name="DeleteButton"
                        Content="🗑️ Удалить"
                        Click="DeleteProduct_Click"
                        Background="#FFF44336"
                        Foreground="White"
                        Width="180"
                        Height="40"
                        IsEnabled="False"/>

                <Button Content="🔄 Обновить"
                        Click="Refresh_Click"
                        Background="#FF2196F3"
                        Foreground="White"
                        Width="180"
                        Height="40"/>
            </StackPanel>
        </Grid>
    </Border>

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="0"
                                Padding="15,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
</Window>